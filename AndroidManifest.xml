<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clover4.beta"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.clover4.beta.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.clover4.beta.SelectBuilding"
            android:label="@string/title_activity_select_building" >
        </activity>
        <activity
            android:name="com.clover4.beta.ClassroomInfo"
            android:label="@string/title_activity_classroon_info" >
        </activity>
        <activity
            android:name="com.clover4.beta.PlanEvent"
            android:label="@string/title_activity_plan_event" >
        </activity>
        <activity
            android:name="com.clover4.beta.ShowClassroom"
            android:label="@string/title_activity_show_classroom" >
        </activity>
        <activity
            android:name="com.clover4.beta.ShowLecture"
            android:label="@string/title_activity_show_lecture" >
        </activity>
        <activity
            android:name="com.clover4.beta.ShowAct"
            android:label="@string/title_activity_show" >
        </activity>
    </application>

</manifest>
